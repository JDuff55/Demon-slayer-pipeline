public class NameValidator{

    public static boolean isValidName(String name){
        return name != null && name.matches("[a-zA-z]+");
    }
}

import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;


public class NameValidatorTest {

    @Test
    void testValidNames() {
        assertTrue(NameValidator.isValidName("Alice"));
        assertTrue(NameValidator.isValidName("Bob"));
    }

    @Test
    void testInvalidNames() {
        assertFalse(NameValidator.isValidName("Alice123"));  // contains digits
        assertFalse(NameValidator.isValidName(""));          // empty string
        assertFalse(NameValidator.isValidName("John_Doe"));  // underscore
        assertFalse(NameValidator.isValidName("Mary-Jane")); // hyphen
        assertFalse(NameValidator.isValidName(null));        // null value
        assertFalse(NameValidator.isValidName("Ã‰lodie"));    // non-ASCII letter
        assertFalse(NameValidator.isValidName("Tom!"));      // special char
    }
}
